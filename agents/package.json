{
  "name": "nomos-agents",
  "version": "1.0.0",
  "type": "module",
  "description": "Hedera Agent Kit powered agents for Nomos platform",
  "scripts": {
    "start:creator": "node creator-agent/index.js",
    "start:echoguard": "node echoguard-agent/index.js",
    "start:both": "concurrently \"npm run start:creator\" \"npm run start:echoguard\"",
    "build": "tsc",
    "dev:creator": "tsx watch creator-agent/index.ts",
    "dev:echoguard": "tsx watch echoguard-agent/index.ts",
    "dev:both": "concurrently \"npm run dev:creator\" \"npm run dev:echoguard\"",
    "test": "node test-agents.js"
  },
  "dependencies": {
    "@hashgraph/sdk": "^2.75.0",
    "@langchain/core": "^0.3.0",
    "@langchain/groq": "^0.1.0",
    "@supabase/supabase-js": "^2.76.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "hedera-agent-kit": "^3.4.0",
    "langchain": "^0.3.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0"
  }
}